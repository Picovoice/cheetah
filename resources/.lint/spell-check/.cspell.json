                                           {
  "language": "en",
  "dictionaries": [
    "dict"
  ],
  "dictionaryDefinitions": [
    {
      "name": "dict",
      "path": "./dict.txt",
      "addWords": true
    }
  ],
  "ignorePaths": [
    // submodules
    "../../../demo/c/dr_libs/**/*",
    "../../../demo/c/pvrecorder/**/*",

    // binaries
    "**/*.a",
    "**/*.dll",
    "**/*.dylib",
    "**/*.jar",
    "**/*.mp3",
    "**/*.node",
    "**/*.ppn",
    "**/*.pv",
    "**/*.so",
    "**/*.wasm",
    "**/*.wav",
    "../../../lib/ios/**/*",

    // .NET
    "**/*.csproj",
    "**/*.targets",

    // android & java
    "**/AndroidManifest.xml",
    "**/activity_main.xml",

    // go
    "**/go*.sum",
    "**/go*.mod",

    // ios
    "**/*.xcconfig",
    "**/*.podspec",
    "**/Podfile",
    "**/*.plist",
    "**/contents.xcworkspacedata",
    "**/*.storyboard",
    "**/*.pbxproj",
    "**/*.xcscheme",
    "**/*.m",

    // java
    "**/build.gradle",
    "**/gradle-wrapper.properties",
    "**/gradle.properties",
    "**/gradlew",
    "**/gradlew.bat",
    "**/proguard-rules.pro",

    // javascript
    "**/package.json",
    "**/packages-lock.json",
    "**/tsconfig.json",
    "**/tslint.json",

    // react-native
    "**/*.keystore",
    "**/BUCK",
    "**/build_defs.bzl",
    "**/binding/react-native/test-app/**/*.xml",
    "**/binding/react-native/test-app/**/*.mm",

    // rust
    "**/Cargo.toml",
  ]
}
